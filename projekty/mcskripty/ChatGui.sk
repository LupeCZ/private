command /locale [<text>]:
        permission: chatgui.setlocale
        trigger:
                if argument-text is "cs", "CZ" or "CS":
                        set {locale.en} to false
                        set {locale.cz} to true
                        message "Jazyk byl nastaven na cestinu"
                if argument-text is "en", "En" or "EN":
                        set {locale.en} to true
                        set {locale.cz} to false
                        message "Language was set to English"

command /setoppass [<text>]:
        permission: chatgui.oppass.set
        trigger: 
                if {locale.en} is true:
                        message "&b&lPassword for command /op was se to %argument-text%"
                        set {oppass} to argument-text
                if {locale.cz} is true:
                        message "&b&lHeslo pro prikaz /op bylo nastaveno na %argument-text%"
                        set {oppass} to argument-text
                                                                                
on command "op":
 if {locale.cz} is true:
  if {willopped} is true:
   wait 10 seconds
   set {willopped} to false
  else:
   message "&bProsim, prvni napis heslo: /opheslo"
   set {willopped} to false
   cancel the event
 if {locale.en} is true:
  if {willopped} is true:
   wait 10 seconds
   set {willopped} to false
  else:
   message "&b&lPlease, write op password at first! /oppass"
   set {willopped} to false
   cancel the event
   set {willopped} to false
  
