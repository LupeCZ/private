   add 1 to {_human.%message%.%player%}
   if {_human.%message%.%player%} is 2:
    message "%colored {chatguiprefix}% &6&lPlease, don´t spam otherwise you will kicked!"
   if {_human.%message%.%player%} is 3:
    set {_human.%message%.%player%} to 0
    execute console command "kick %player% spam"
   wait 5 seconds
   set {_human.%message%.%player%} to 0
  
