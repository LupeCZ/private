command /clearchat:
        permission: chatgui.clearchat
        trigger:
                loop 100 times:
                        broadcast ""
                if {locale.en} is true:
                        send message "%colored {chatguiprefix}%&c&bAdmin %player% has cleared chat"
                if {locale.cz} is true:
                        send message "%colored {chatguiprefix}%&c&bAdmin %player% vycistil chat"
						
command /lockchat:
        permission: chatgui.lockchat
        trigger:
                if {lock} is 1:
                        if {locale.en} is true:
                                broadcast "%colored {chatguiprefix}%&c&bAdmin %player% has locked the chat!"
                                set {lock} to 2
                        else:
                                broadcast "%colored {chatguiprefix}%&c&bAdmin %player% zamkl chat"
                                set {lock} to 2
                else:
                        if {locale.en} is true:
                                broadcast "%colored {chatguiprefix}%&c&bAdmin %player% has unlocked the chat!"
                                set {lock} to 1
                        if {locale.cz} is true:
                                broadcast "%colored {chatguiprefix}%&c&bAdmin %player% odemkl chat"
                                set {lock} to 1
								
