command /spam:
        description: Zapne/vypne hlidani spamu
        permission: chatgui.spam
        permission message: &c&lNemás oprávnení
        trigger: 
                if {locale.cz} is true:
                        if {chatgui.spam} is true:
                                message "%colored {chatguiprefix}% &6Ochrana proti spamu vypnuta"
                                set {chatgui.spam} to false
                        else:
                                message "%colored {chatguiprefix}% &6Ochrana proti spamu zapnuta"
                                set {chatgui.spam} to true
                if {locale.en} is true:
                        if {chatgui.spam} is true:
                                message "%colored {chatguiprefix}% &6AntiSpam off"
                                set {chatgui.spam} to false
                        else:
                                message "%colored {chatguiprefix}% &6AntiSpam on"
                                set {chatgui.spam} to true
                                                                                                
command /reklama:
        description: Zapne/vypne hlidani reklamy
        permission: chatgui.ad
        permission message: &c&lNemás oprávnení
        trigger: 
                if {chatguiconfig} is false:
                        if {locale.cz} is true:
